<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/choisebackground"
    android:layoutDirection="ltr"
    tools:context=".About">

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="left"
        android:layoutDirection="ltr"
        android:padding="10dp"
        android:text="Let's Practice a small virtual interview simulator contains some MCQ including many programming languages and DS, Algorithms, Data base, OOPs and some of mental questions like maths, geometry and IQ questions.

        \n\nYou can do an interview quiz and its score will  add to your rate for the first time that you do it."
        android:textColor="@color/whiteTextColor"
        android:textDirection="ltr"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>